{
  "name": "finsim-pro",
  "version": "1.0.0",
  "private": true,
  "description": "Financial simulation and planning application",
  "author": "Jacob Pech",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "docs"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/finsim",
    "docs:dev": "npm start --workspace=docs -- --port 3001",
    "dev:all": "concurrently \"npm run dev\" \"npm run docs:dev\" --names \"app,docs\" --prefix-colors \"cyan,magenta\"",
    "build": "npm run build --workspace=apps/finsim",
    "docs:build": "npm run build --workspace=docs",
    "build:all": "npm run build && npm run docs:build",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "docs:version": "npm run docusaurus docs:version --workspace=docs",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "standard-version": "^9.5.0"
  }
}
