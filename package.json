{
  "name": "finsim-pro",
  "version": "1.3.0",
  "private": true,
  "description": "Financial simulation and planning application",
  "author": "Jacob Pech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pechjacob/finsim-pro.git"
  },
  "bugs": {
    "url": "https://github.com/pechjacob/finsim-pro/issues"
  },
  "homepage": "https://pechjacob.github.io/finsim-pro",
  "workspaces": [
    "apps/*",
    "docs"
  ],
  "scripts": {
    "app:dev": "npm run dev --workspace=apps/finsim",
    "docs:dev": "npm start --workspace=docs -- --port 3001 --no-open",
    "dev:all": "concurrently \"npm run app:dev\" \"npm run docs:dev\" --names \"app,docs\" --prefix-colors \"cyan,magenta\"",
    "app:build": "npm run build --workspace=apps/finsim",
    "docs:build": "npm run build --workspace=docs",
    "build:all": "npm run app:build && npm run docs:build",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "release:preview": "node scripts/preview-release.js",
    "changelog:preview": "node scripts/preview-changelog.js",
    "changelog:sync": "node scripts/preview-changelog.js --sync",
    "release": "standard-version && node scripts/sync-release-notes.js",
    "release:minor": "standard-version --release-as minor && node scripts/sync-release-notes.js",
    "release:major": "standard-version --release-as major && node scripts/sync-release-notes.js",
    "release:patch": "standard-version --release-as patch && node scripts/sync-release-notes.js",
    "sync:release-notes": "node scripts/sync-release-notes.js",
    "clean": "rm -rf node_modules apps/*/node_modules docs/node_modules",
    "fresh": "npm run clean && npm install",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "standard-version": "^9.5.0"
  }
}
